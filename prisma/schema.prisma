
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id   Int       @id @default(autoincrement())
  name      String
  surname   String?   
  email     String?   @unique
  phone     String?   @unique
  isVerified  Boolean  @default(false)
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
